@model Tarefa

<div class="w-100 card border-0 p-4">
    <div class="card-header rounded m-lg-0 py-3" style="background-color: #EC9706;">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Criar Tarefa</h2>
            </div>
        </div>
    </div>

    <div class="card-body border rounded p-6">
        <form method="post" class="row">
            <div class="p-3">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-floating py-1 col-12">
                    <input asp-for="Tarefa_" class="form-control border-bottom shadow" />
                    <label asp-for="Tarefa_" class="ms-2">Nome</label>
                    <span asp-validation-for="Tarefa_" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Lista_TarefasID" class="form-control border-bottom shadow" />
                    <label asp-for="Lista_TarefasID" class="ms-2">Descrição</label>
                    <span asp-validation-for="Lista_TarefasID" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Defenição" class="form-control border-bottom shadow" />
                    <label asp-for="Defenição" class="ms-2">Defenição</label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Prazo" class="form-control border-bottom shadow" />
                    <label asp-for="Prazo" class="ms-2">Prazo</label>
                </div>
                <fieldset>
                    <legend>Prioridade</legend>
                <div class="btn-group" data-toggle="buttons">
                    <label class="btn btn-secondary">
                        <input type="radio" name="Prioridade" value="Baixa"> Baixa
                    </label>
                    <label class="btn btn-secondary">
                        <input type="radio" name="Prioridade" value="Média"> Média
                    </label>
                    <label class="btn btn-secondary">
                        <input type="radio" name="Prioridade" value="Alta"> Alta
                    </label>
                </div>
                </fieldset>
                <div class="row pt-2">
                    <div class="col-12 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Criar
                        </button>
                    </div>
                    <div class="col-12 col-md-3">
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}